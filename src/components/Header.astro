---
import ButtonLink from "./ButtonLink.astro";
import Section from "./Section.astro";
---
<Section>  
  <header id="header">
    <div class="content">
      <h1>
      <span>Hi, Jerry here.</span>
        <span><span class="accent">Full-stack</span> Developer!</span>
      </h1>
      <p class="description">
        Full Stack Developer with 5+ years of experience specializing in React, JavaScript, Vue.js, and Node.js.
        Skilled in building scalable web applications, system administration, and cross-functional collaboration, with a strong enterprise IT background.
      </p>
      <div class="button-container">
         <ButtonLink href="/projects" text="View projects" variant='secondary' />
         <ButtonLink href="/resume.pdf" text="Download resume" isDownload={true}/>
      </div>
    </div>
    <img src="/images/me.png" alt="avatar photo" class="avatar"/>
  </header>
</Section>

<style>
   #header {
    display: grid;
    grid-template-columns: 540px 1fr;
    justify-items: center;
    gap: 80px;
    align-items: center;

    h1 {
      font-size: 44px;
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;

      .accent {
        color: var(--primary);
      }
    }

    .button-container {
      display: flex;
      gap: 10px;
    }

    .description {
      line-height: 28px;
      color: var(--dark);
      margin-bottom: 30px;
    }
    .avatar {
      max-width: 250px;
      border-radius: 50%;
      box-shadow: 5px 5px 15px var(--dark);
    }

    @media (max-width: 1000px) {
      & {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 40px;

        img {
          grid-row: 1;
        }
      }
    }

    @media (max-width: 600px) {
      .button-container {
        flex-direction: column;
      }
    }
  }

 
</style>