---
import Section from './Section.astro'

const connectLinks = {
  email: "mailto:jerry@jerry-codes.com",
  github: "https://github.com/jerryh-jr",
  x: "#",
  linkedin: "https://www.linkedin.com/in/jerry-hudgins-jr/",
